<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Under Construction</title>
    <style>
        body {
            margin: 0;
            background: #f4f4f4;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
        }

        .container {
            text-align: center;
        }

        h1 {
            font-size: 3em;
            color: #333;
        }

        p {
            font-size: 1.2em;
            color: #666;
        }

        .gear {
            width: 100px;
            height: 100px;
            border: 10px solid #0d6efd;
            border-radius: 50%;
            position: relative;
            margin: 20px auto;
            animation: spin 3s linear infinite;
        }

            .gear::before, .gear::after {
                content: "";
                position: absolute;
                background: #0d6efd;
            }

        

        @@keyframes spin {
            0%

        {
            transform: rotate(0);
        }

        100% {
            transform: rotate(360deg);
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="gear"></div>
        <h1>We're Working On It!</h1>
        <p>This page is under construction. Stay tuned 🚧</p>
    </div>
</body>
</html>

@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            setTimeout(()=>{
                  window.location.href = '/Home/Dashboard';
            },2000);
        });
    </script>
}